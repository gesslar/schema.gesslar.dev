{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.gesslar.dev/muddler/v1/aliases.json",
  "title": "Muddler Aliases Schema",
  "description": "Schema for Mudlet aliases described in aliases.json.",
  "type": "array",
  "items": {
    "$ref": "#/definitions/alias"
  },
  "definitions": {
    "alias": {
      "allOf": [
        {
          "$ref": "./muddler-common.json#/$defs/nodeBase"
        },
        {
          "type": "object",
          "properties": {
            "regex": {
              "type": "string",
              "description": "Regex or exact match for the alias."
            },
            "command": {
              "$ref": "./muddler-common.json#/$defs/nodeBase",
              "description": "Command text (optional convenience alongside regex/script)."
            },
            "children": {
              "type": "array",
              "description": "Nested aliases when used as a folder (isFolder=yes).",
              "items": {
                "$ref": "#/definitions/alias"
              }
            }
          }
        }
      ],
      "unevaluatedProperties": false
    }
  }
}
